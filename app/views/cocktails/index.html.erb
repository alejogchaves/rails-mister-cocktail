</div>
<br>
<div class="text-center">
  <%= link_to 'Create your own cocktail', new_cocktail_path, class: "btn btn-dark rounded-lg" %>
</div>
<br>
    <div class="container col-12">
    <div class="d-flex justify-content-around flex-wrap mx-5">
    <% @cocktails.each do |cocktail| %>
      <div class="card mb-4 shadow-sm" style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1557420286-bacad24b4d51?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"> <%= cocktail.name %> </h5>
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to 'More info', cocktail_path(cocktail.id), class: "btn btn-dark rounded-lg" %>
            <%= link_to content_tag(:i, "", class: 'fas fa-trash'), cocktail_path(cocktail), class: "text-dark", method: :delete, data: { message: "are you sure" } %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1571855217410-403e1be6e64e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=985&q=80)">
      Bourbon
    </div>
    </div>
  </div>
</div>
