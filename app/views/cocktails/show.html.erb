<div class="container">
<div class="card-trip">
  <img src="https://images.unsplash.com/photo-1557420286-bacad24b4d51?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" />
  <div class="card-trip-infos">
    <div>
      <h1>Enjoy a <%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
         <div class="d-flex justify-content-between">
          <div class="mx-5">
          <p> Description: <%= dose.description %> </p>
            <p> Ingredient: <%= dose.ingredient.name %> </p>
            <p> <%= link_to content_tag(:i, "", class: 'fas fa-trash'), dose_path(dose), class: 'text-dark', method: :delete, data: { message: "are you sure" } %></p>
          </div>
        <% end %>
        <div>
          <p><%= link_to 'add doses', new_cocktail_dose_path(@cocktail.id), class: 'text-dark' %>
          <p><%= link_to 'Back to homepage', root_path, class: 'text-dark' %></p>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
